@model IEnumerable<RandomActs.Models.RandomAct>

@{
    ViewBag.Title = "Random Acts";
}

<h2>Random Acts of Kindness</h2>

<p>
    @Html.ActionLink("New Event", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            Max
        </th>
        <th>
            Registered
        </th>
        <th>
            Wait Listed
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    bool boolWaitList = (item.Actors.Count >= item.MaxActors);
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxActors)
        </td>
        <td>
            @(item.Actors.Count > item.MaxActors ? item.MaxActors : item.Actors.Count)
        </td>
        <td>
            @(item.Actors.Count > item.MaxActors ? item.Actors.Count - item.MaxActors : 0)
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RandomActId }) |
            @Html.ActionLink("Cancel", "Delete", new { id = item.RandomActId }) |
            @Html.ActionLink("Attendees", "AttendeeList", "ActActor", new { id = item.RandomActId }, null)
        </td>
    </tr>
}

</table>
